---
import Welcome from '../components/Welcome.astro';
import Layout from '../layouts/Layout.astro';
---

    <div class="bg-gray-600 flex flex-col items-center justify-center w-full h-full">
		
		<form method="post" class="w-[30%] border-2 rounded-3xl bg-amber-500 flex flex-col items-center bg-gradient-to-tl from-[#335cc5] to-[#637FFD]">

			<h1 class="m-1 font-mono text-[24px]">Crea una cuenta</h1>
			<input class="bg-amber-50 border-2 mt-2"  type="text" placeholder="Nombre de usuario">
			<input class="bg-amber-50 border-2 mt-4" type="password" placeholder="contrasenia">
			<button class="bg-amber-300 m-3" type="submit">Crear Cuenta</button>


		</form>

	</div>